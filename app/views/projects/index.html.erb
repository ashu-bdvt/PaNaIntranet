<h1>Listing projects</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Name</th>
    <th>Client</th>
    <th>Start date</th>
    <th>End date</th>
    <th>Actions</th>
  </tr>

<% @projects.each do |project| %>
  <tr>
    <td><%= project.id %></td>
    <td><%= project.name %></td>
    <td><%= project.client %></td>
    <td><%= project.start_date %></td>
    <td><%= project.end_date %></td>
    <td><%= link_to 'Show', project %>
    <%= link_to 'Edit', edit_project_path(project) %>
    <%= link_to 'Remove', project, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= button_to "New Project", new_project_path,:method => :get %>
