<div class="fields">
	<p>
    
    <%= f.label :Project %>
    <%= f.select("project_id", Project.find(:all).collect {|c| [c.name, c.id]})%>  
    
    <%= f.hidden_field :_destroy %>
    <%= link_to_function "remove", "remove_fields(this)" %></br>
    
    <div class="field">
    <%= f.fields_for :tasks do |builder| %> 
    <%= render 'task', :f => builder %>
    <% end %>
    </div>
    
    <div>	
    <%= link_to_add_fields "Add New Task", f, :tasks %>
    </div>
       
    <h>===========================================================================================================</h>
    </p>
    
</div>