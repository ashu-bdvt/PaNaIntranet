<p id="notice"><%= notice %></p>

<p>
  <b>Employee Id:</b>
  <%= @employee.id %>
</p>

<p>
  <b>Name:</b>
  <%= @employee.name %>
</p>

<p>
  <b>Designation:</b>
  <%= @employee.designation %>
</p>

<p>
  <b>Manager:</b>
  <%= @employee.manager.name %>
</p>

<p>
  <b>Date of joining:</b>
  <%= @employee.date_of_joining %>
</p>

<p>
  <b>Contact number:</b>
  <%= @employee.contact_number %>
</p>

<p>
  <b>Email:</b>
  <%= @employee.email %>
</p>

<p>
  <b>Address:</b>
  <%= @employee.address %>
</p>

<p>
  <b>Employee Image:</b>
  <%= image_tag @employee.photo_url.to_s %>
</p>

